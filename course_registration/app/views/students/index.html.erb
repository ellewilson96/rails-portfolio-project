<div class="student-body">
  <h1>All Flatiron High School Students</h1>
  <div class="student-card">
  <% @students.each do |student| %>
  <%= student.first_name %> <%= student.last_name%><br>
  <div class="grade-links">
  <%= link_to "View #{student.first_name}'s Grades", student_grades_path(student) %><br>
  <%= link_to "Add New Grade for #{student.first_name}", new_student_grade_path(student) %>
  </div>
<% end %>
</div>

<div class="student-links">
  <%= link_to "Enroll a New Student", new_student_path %><br>
  <%= link_to "Top 3 Students", students_smartest_path %>
</div>

</div>
