<h1>Students in Course <%= @course.number %> - <%= @course.name %></h1><br>

<% if @course.students.empty? || @course.students = nil  %>
<h2><%= link_to "Add a student to this course", new_course_student_path %></h2>
  <% else %>
  <% @students.each do |student| %>
  <%= student.first_name %>
  <%= student.last_name %> |
  <%= link_to "Student Profile", course_student_path(student) %><br>
  <h2><%= link_to "Add a student to this course", new_course_student_path %></h2>
  <% end %>

<% end %>
