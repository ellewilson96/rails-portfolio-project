<div>
  <h3>
    <%= @student.first_name %> <%= @student.last_name%></h3>
  <ol class="center">
      <% if @student.grades.empty? %>
        <%= link_to "Add a New Grade for #{@student.first_name}", new_student_grade_path(@student) %>
      <% else %>
        <% @student.grades.each do |grade| %>
<h4><li>
      Behavior: <%= grade.behavior %><br>
      Letter Grade: <%= grade.letter_grade %><br>
        <%= link_to 'Update Grade', edit_student_grade_path(@student, grade) %><br>
      <% end %>
        <% @student.grades.each do |grade| %>
        <% @user = grade.user %>
        Submitted by: <%= @user.email %>
      <% end %>
<% end %>
  </h4>
</li>


</ol>
</div>
<h3><%= link_to "Back to All Students", students_path %></h3>
